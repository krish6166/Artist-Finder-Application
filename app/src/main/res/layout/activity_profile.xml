<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.examples.application.artistfinder.Profile">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="377dp"
        android:layout_height="342dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/browse"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="Browse"
        android:background="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/profile_image"
        />

    <Button
        android:id="@+id/upload"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:background="@color/white"
        android:layout_alignBottom="@+id/browse"
        android:layout_marginLeft="220dp"
        />

    <Button
        android:id="@+id/upload_images"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/browse"
        android:background="@color/fav1"
        android:text="Upload Your Artwork"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
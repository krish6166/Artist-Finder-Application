<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.examples.application.artistfinder.Register">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_above="@+id/email2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/background_general"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:padding="5dp"
        android:hint="Email"
        android:textColorHint="@color/white"/>


    <EditText
        android:id="@+id/password2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_general"
        android:ems="10"
        android:inputType="text"
        android:padding="5dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:layout_below="@+id/email2"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/Login3"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password2"
        android:background="@android:color/background_light"
        android:text="Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_dark"
        android:visibility="visible" />

    <Button
        android:id="@+id/Login5"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Login3"
        android:background="@android:color/background_light"
        android:text="Create a New Account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/background_dark"
        android:visibility="visible" />


    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Forgot Password "
        android:textColor="@android:color/holo_orange_light" />

    <ProgressBar
        android:id="@+id/progressBar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/Login3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

</RelativeLayout>